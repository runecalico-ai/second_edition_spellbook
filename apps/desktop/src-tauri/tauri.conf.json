{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Spellbook",
  "mainBinaryName": "spellbook-desktop",
  "version": "0.1.0",
  "identifier": "com.local.spellbook",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173"
  },
  "bundle": {
    "resources": ["resources/sqlite-vec/*"]
  },
  "app": {
    "windows": [
      {
        "title": "Spellbook",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
